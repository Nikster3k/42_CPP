{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug PmergeMe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp09/ex02/PmergeMe", // Path to the PmergeMe executable
            "args": ["3 10 13 4 22 30 5 23 21 7 28 16 29 25 20 12 14 9 6 2 11"], // Command line arguments to pass to PmergeMe
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}

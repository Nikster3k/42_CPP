{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug PmergeMe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp09/ex02/PmergeMe", // Path to the PmergeMe executable
            "args": ["5 15 25 12 1 55 98 2 6"], // Command line arguments to pass to PmergeMe
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
